{
  "name": "sql-terraform",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "build": "bun build index.ts --outdir ./dist",
    "plan": "bun run index.ts plan",
    "apply": "bun run index.ts apply",
    "test": "bun test src/test",
    "test:watch": "bun test --watch",
    "test:setup": "bun run src/test/setup.ts",
    "test:setup:local": "docker compose up -d && bun run src/test/setup.ts",
    "test:teardown": "docker compose down",
    "test:full": "bun run test:setup:local && bun test && bun run test:teardown",
    "test:unit": "bun test src/test/tables.test.ts src/test/columns/",
    "test:integration": "echo 'No integration tests defined yet'"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "diff": "^5.1.0",
    "node-sql-parser": "^5.3.9",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/diff": "^5.0.8",
    "@types/node-sql-parser": "^1.1.0",
    "@types/pg": "^8.10.9",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
