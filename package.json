{
  "name": "sql-terraform",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "build": "bun build index.ts --outdir ./dist",
    "plan": "bun run index.ts plan",
    "apply": "bun run index.ts apply",
    "test": "bun test src/test --ignore '**/performance/**'",
    "test:watch": "bun test --watch src/test --ignore '**/performance/**'",
    "test:performance": "bun test src/test/columns/performance/",
    "test:performance:watch": "bun test --watch src/test/columns/performance/",
    "test:setup": "bun run src/test/setup.ts",
    "test:setup:local": "docker compose up -d && bun run src/test/setup.ts",
    "test:teardown": "docker compose down",
    "test:full": "bun run test:setup:local && bun test src/test --ignore '**/performance/**' && bun run test:teardown",
    "test:full:with-performance": "bun run test:setup:local && bun test src/test && bun run test:teardown",
    "test:unit": "bun test src/test/tables.test.ts src/test/columns/ --ignore '**/performance/**'",
    "test:integration": "echo 'No integration tests defined yet'",
    "test:all": "bun test src/test"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "diff": "^5.1.0",
    "pg": "^8.11.3",
    "sql-parser-cst": "^0.33.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/diff": "^5.0.8",
    "@types/pg": "^8.10.9",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
